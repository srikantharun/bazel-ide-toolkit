{
  "name": "bazel-ide-toolkit",
  "displayName": "Bazel IDE Toolkit",
  "description": "Enhanced Bazel integration with auto-refresh compile_commands.json, build/run/test commands",
  "version": "0.2.0",
  "publisher": "srikantharun",
  "license": "Apache-2.0",
  "icon": "images/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/srikantharun/bazel-ide-toolkit.git"
  },
  "homepage": "https://github.com/srikantharun/bazel-ide-toolkit",
  "bugs": {
    "url": "https://github.com/srikantharun/bazel-ide-toolkit/issues"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Programming Languages",
    "Other"
  ],
  "keywords": [
    "bazel",
    "bzlmod",
    "build",
    "compile_commands",
    "clangd",
    "c++",
    "cpp"
  ],
  "activationEvents": [
    "workspaceContains:MODULE.bazel",
    "workspaceContains:WORKSPACE",
    "workspaceContains:WORKSPACE.bazel"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "bazel-ide-toolkit.refresh",
        "title": "Bazel: Refresh compile_commands.json",
        "icon": "$(refresh)"
      },
      {
        "command": "bazel-ide-toolkit.toggleAutoRefresh",
        "title": "Bazel: Toggle Auto-Refresh"
      },
      {
        "command": "bazel-ide-toolkit.selectPlatform",
        "title": "Bazel: Select Platform"
      },
      {
        "command": "bazel-ide-toolkit.buildTarget",
        "title": "Bazel: Build Target",
        "icon": "$(tools)"
      },
      {
        "command": "bazel-ide-toolkit.testTarget",
        "title": "Bazel: Test Target",
        "icon": "$(beaker)"
      },
      {
        "command": "bazel-ide-toolkit.runTarget",
        "title": "Bazel: Run Target",
        "icon": "$(play)"
      },
      {
        "command": "bazel-ide-toolkit.buildFile",
        "title": "Bazel: Build Current File's Target"
      },
      {
        "command": "bazel-ide-toolkit.testFile",
        "title": "Bazel: Test Current File"
      }
    ],
    "keybindings": [
      {
        "command": "bazel-ide-toolkit.buildFile",
        "key": "ctrl+shift+b",
        "mac": "cmd+shift+b",
        "when": "editorTextFocus"
      },
      {
        "command": "bazel-ide-toolkit.testFile",
        "key": "ctrl+shift+t",
        "mac": "cmd+shift+t",
        "when": "editorTextFocus"
      }
    ],
    "configuration": {
      "title": "Bazel IDE Toolkit",
      "properties": {
        "bazelIdeToolkit.autoRefresh": {
          "type": "boolean",
          "default": true,
          "description": "Automatically refresh compile_commands.json when BUILD files change"
        },
        "bazelIdeToolkit.debounceMs": {
          "type": "number",
          "default": 2000,
          "description": "Debounce delay in milliseconds before refreshing"
        },
        "bazelIdeToolkit.targets": {
          "type": "string",
          "default": "//...",
          "description": "Bazel targets to include in compile_commands.json"
        },
        "bazelIdeToolkit.showStatusBar": {
          "type": "boolean",
          "default": true,
          "description": "Show Bazel status in the status bar"
        },
        "bazelIdeToolkit.buildFlags": {
          "type": "array",
          "default": [],
          "description": "Additional flags to pass to bazel build"
        },
        "bazelIdeToolkit.testFlags": {
          "type": "array",
          "default": [],
          "description": "Additional flags to pass to bazel test"
        },
        "bazelIdeToolkit.runFlags": {
          "type": "array",
          "default": [],
          "description": "Additional flags to pass to bazel run"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "typescript": "^5.0.0"
  }
}
